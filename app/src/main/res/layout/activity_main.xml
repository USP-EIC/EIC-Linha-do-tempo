<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:longClickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Selecionar data "
            android:id="@+id/txt_date"
            android:textSize="20dp"
            android:editable="false"
            android:layout_gravity="center"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|center_vertical"
            android:layout_marginTop="25dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  BUSCAR EVENTOS  "
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/btn1"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:onClick="sendData"
                android:enabled="false"
                android:textColor="#ffffff"
                android:background="@drawable/screen_border_unset" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" SAIR "
                android:id="@+id/button_sair"
                android:clickable="true"
                android:onClick="botaosairfunc"
                android:layout_gravity="center"
                android:enabled="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/screen_border"
                android:elegantTextHeight="false"
                android:focusable="true"
                android:textColor="#ffffff" />

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="05dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:text="   Logar com Facebook   "
            android:id="@+id/btn_testefb"
            android:clickable="true"
            android:onClick="Logar_fb"
            android:layout_gravity="center|top"
            android:enabled="true"
            android:background="@drawable/screen_borderfb"
            android:elegantTextHeight="false"
            android:focusable="true"
            android:textColor="#ffffff"
            android:capitalize="characters"
            android:textStyle="bold"
            android:layout_marginTop="5.0dp"
            android:layout_marginBottom="15dp" />

        <TextView android:text="CRÃ‰DITOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:clickable="true"
            android:enabled="true"
            android:onClick="btnCreditos"
            android:textColor="#000000" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />

        <TextView android:text="APOIO:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#000000" />

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center|center_vertical|center_horizontal"
        android:layout_marginTop="0dp"
            android:layout_gravity="center|bottom">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_gravity="center"
                android:src="@drawable/cib_ponei"
                android:contentDescription="fapesp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:layout_gravity="center"
                android:src="@drawable/fapesp_ponei" />

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />
   </LinearLayout>
</ScrollView>
